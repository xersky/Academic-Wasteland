<MudGrid Style="height : 75vh; overflow-y:scroll;">
    @foreach(var announcement in Announcemets){
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <Announcement Data="announcement" Index="0"/>
            </MudPaper>
        </MudItem>
    }
</MudGrid>

@code {
    [Parameter] public IEnumerable<AnnouncementT> Announcemets {get; set;} 
}