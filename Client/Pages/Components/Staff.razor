<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
     <MudGrid Stye="margin: 10px;">
        <MudItem xs="12" sm="12" md="12">
            <MudPaper Stye="margin: 10px;">
                <MudMenu TransformOrigin="Origin.TopLeft" Origin="Origin.BottomLeft" Label="Documents Management">
                    <MudMenuItem>Documents</MudMenuItem>
                    <MudMenuItem>Approved Documents</MudMenuItem>
                    <MudMenuItem>Refused Documents</MudMenuItem>
                </MudMenu>
                <MudMenu Label="Staff Menu" Dense="true">
                    <MudMenuItem>Students</MudMenuItem>
                    <MudMenuItem>Teachers</MudMenuItem>
                    <MudMenuItem>Staff*</MudMenuItem>
                </MudMenu>
                <MudMenu Label="Additonal Details" Dense="true">
                    <MudMenuItem>Teacher Reports</MudMenuItem>
                    <MudMenuItem>Student Reports</MudMenuItem>
                </MudMenu>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                <GenericCard Title="Number Of Total Requests:" Subtitle="" >
                    <MudTypography variant="h5" className="mt-4">
                        @(new Random().Next(100, 500))
                    </MudTypography>
                </GenericCard>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                <GenericCard Title="Number Of Processed Requests:" Subtitle="" >
                    <MudTypography variant="h5" className="mt-4">
                        @(new Random().Next(100, 250))
                    </MudTypography>
                </GenericCard>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                <GenericCard Title="Number Of Pending Requests:" Subtitle="" >
                    <MudTypography variant="h5" className="mt-4">
                        @(new Random().Next(250, 350))
                    </MudTypography>
                </GenericCard>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6">
             <MudGrid Stye="margin: 10px;">
                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                        <GenericCard Title="Number Of Professors Demandes:" Subtitle="" >
                            <MudTypography variant="h5" className="mt-4">
                                @(new Random().Next(30, 50))
                            </MudTypography>
                        </GenericCard>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                        <GenericCard Title="Number Of Students Demandes:" Subtitle="" >
                            <MudTypography variant="h5" className="mt-4">
                                @(new Random().Next(100, 750))
                            </MudTypography>
                        </GenericCard>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 100%">
                <GenericCard Title="Number Of Logged Students:" Subtitle="" >
                    <MudChart ChartType="ChartType.Donut" Width="200px" Height="200px" InputData="@data" InputLabels="@labels">
                        <CustomGraphics>
                            <text class="donut-inner-text" x="47%" y="35%" dominant-baseline="middle" text-anchor="middle" fill="black" font-family="Helvetica" font-size="2">Total</text>
                            <text class="donut-inner-text" x="47%" y="50%" dominant-baseline="middle" text-anchor="middle" fill="black" font-family="Helvetica" font-size="5">@data.Sum().ToString()</text>
                        </CustomGraphics>
                    </MudChart>
                </GenericCard>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>


@code {
    public double[] data = { 250, 50, 250 };
    public string[] labels = { "Pending", "Refused", "Approved" };
}